{
  "name": "grunty",
  "version": "0.1.0",
  "description": "Run any grunt plugin as NPM script without Gruntfile.js",
  "main": "index.js",
  "scripts": {
    "test": "npm run concat; npm run concat2",
    "concat": "grunty grunt-contrib-concat --src='test/[a|b].js' --dest=test/out.js --verbose",
    "concat2": "grunty grunt-contrib-concat --src=test/a.js,test/b.js --dest=test/out.js"
  },
  "bin": {
    "grunty": "./bin/grunty.js"
  },
  "keywords": [
    "grunt",
    "cli",
    "helper",
    "npm",
    "script",
    "runner",
    "plugin"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "check-more-types": "1.7.2",
    "grunt": "0.4.5",
    "lazy-ass": "0.5.8"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bahmutov/grunty.git"
  },
  "bugs": {
    "url": "https://github.com/bahmutov/grunty/issues"
  },
  "homepage": "https://github.com/bahmutov/grunty",
  "devDependencies": {
    "grunt-contrib-concat": "0.5.1",
    "pre-git": "0.2.1"
  },
  "pre-commit": [
    "npm test",
    "npm version"
  ]
}
